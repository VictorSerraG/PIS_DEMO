<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="primaryTextColor">@color/md_grey_900</item>
        <item name="secondaryTextColor">@color/md_white_1000</item>
        <item name="backgroundCardColor">@color/md_white_1000</item>
        <item name="dividerColor">@color/md_black_1000</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark"    parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="primaryTextColor">@color/md_white_1000</item>
        <item name="secondaryTextColor">@color/md_white_1000</item>
        <item name="backgroundCardColor">@color/md_grey_700</item>
        <item name="dividerColor">@color/md_white_1000</item>
        <item name="actionMenuTextColor">@color/md_black_1000_25</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Specific Feed activity theme -->
    <style name="FeedActivityThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>
    <style name="FeedActivityThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/md_grey_900</item>
    </style>
</resources>