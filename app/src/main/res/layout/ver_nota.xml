<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundCardColor">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/noteTitle"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitulo"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="clip_horizontal|center"
        android:text="@string/textTitulo"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/text2" />

    <TextView
        android:id="@+id/textContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_Titulo"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/noteContent"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textContenido"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="@string/textContennido"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/text2" />

</RelativeLayout>